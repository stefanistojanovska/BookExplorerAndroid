<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="150dp">

    <ImageView
            android:layout_width="92dp"
            android:layout_height="125dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintVertical_bias="0.285"

    />
    <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:textColor="#000012"
            android:textStyle="bold"
            android:id="@+id/textTitle" app:layout_constraintStart_toEndOf="@+id/poster"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

    <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:textColor="#2976E9"
            android:textStyle="italic"
            android:textSize="12sp"
            android:id="@+id/textAuthors" app:layout_constraintStart_toEndOf="@+id/poster"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" android:layout_marginTop="0dp"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:textColor="#9C9AA1"
            android:textSize="10sp"
            android:id="@+id/textDescription" app:layout_constraintStart_toEndOf="@+id/poster"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textAuthors" android:layout_marginTop="0dp"/>
    <Button
            android:text="@string/more_info"
            app:layout_constraintStart_toEndOf="@+id/poster"
            android:layout_marginStart="20dp"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:textSize="8sp"
            android:textColor="#FFFFFF"

            android:background="@drawable/mybutton"
            android:id="@+id/btnInfo"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>